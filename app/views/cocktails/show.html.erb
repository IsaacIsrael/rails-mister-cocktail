<main id="show">
  <section>
    <div class="container">
      <header class="header">
        <div class="actions">
          <%= link_to raw('<i class="fas fa-chevron-left"></i>'), root_path, class: "default" %>
        </div>
        <div class="header-body">
          <h1 class="text-center"><%= @cocktail.name %></h1>
        </div>
      </header>
      <div class="card infos">
        <div class="photo">
          <img src="https://source.unsplash.com/800x450/?coktail" alt="">
        </div>
        <div class="info">
          <h3 class="text-center">Ingredients</h3>
        <ul class="list">
          <% @cocktail.doses.each do |dose|  %>
            <li>
              <span><%= "#{dose.description} #{dose.ingredient.name}"%></span>
              <%= link_to raw('<i class="fas fa-trash"></i>') , dose_path(dose), method: 'DELETE', class:"danger" %>
            </li>
          <% end %>
        </ul>
        <%= render 'doses/form' %>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="container">
      <header class="header">
        <div class="header-body">
          <h2>Reviews</h2>
        </div>
      </header>
       <%= render '/reviews/new', cocktail: @cocktail, review: @review%>
        <ul class="list">
        <% @cocktail.reviews_sort_date.each do |review| %>
          <li>
            <div class="list-body">
              <span><%= review.date %></span>
              <p><%= review.content%></p>
            </div>
            <div>
              <%5.times do |i| %>
                <i class="start <%= i < review.rating ? 'fas': 'far'%> fa-star"></i>
              <% end %>
            </div>
            </li>
        <%end %>
      </ul>
    </div>
  </section>
</main>
