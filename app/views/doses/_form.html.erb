<%= simple_form_for [@cocktail, @dose], :html=> { class: 'form-inline' } do |f| %>
  <%= f.input :description, placeholder: '12 ml', label: false%>
  <%= f.input :ingredient_id,prompt: "Ingredient", label: false, collection: @ingredients %>
  <%= button_tag type: 'submit',class: "btn btn-default primary" do %>
     <i class="fas fa-plus-circle"></i>
  <% end %>
<% end %>



